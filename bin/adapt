#!/usr/bin/env node
var chalk = require("chalk");
var fs = require('fs');
var path = require('path');
var semver = require('semver');
var curVer = process.versions.node;
var pkg = JSON.parse(fs.readFileSync(path.join(__dirname, '../package.json')));
var versRange = pkg.engines.node;
if(semver.satisfies(curVer, versRange) === false){
  var errString = 'adapt-cli is only compatible with node versions '+versRange+', you are curently using ' + curVer + ' - errors may occur.';
  console.warn(chalk.red(errString));
  process.exit();
}
var cli = require('../lib/cli');
cli.withOptions().withPackage().execute();
